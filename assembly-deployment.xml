<assembly>
    <id>deployment</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>LogMonitor</outputDirectory>
            <includes>
                <include>README*</include>
                <include>Changelog.md</include>
                <include>LICENSE</include>
                <include>NOTICE.txt</include>
                <include>monitor.xml</include>
                <include>default-config.yml</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>LogMonitor/lib</outputDirectory>
            <includes>
                <include>commons-*.jar</include>
                <include>hamcrest-*.jar</include>
                <include>java-grok-*.jar</include>
                <include>log4j-*.jar</include>
                <include>snakeyaml-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>resources/grok</directory>
            <outputDirectory>LogMonitor/grok</outputDirectory>
            <includes>
                <include>*.grok</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>resources/jobs</directory>
            <outputDirectory>LogMonitor/jobs</outputDirectory>
            <includes>
                <include>*.job</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>LogMonitorExtension-${pom.version}.jar</source>
            <outputDirectory>LogMonitor/lib</outputDirectory>
            <destName>LogMonitorExtension.jar</destName>
        </file>
    </files>
</assembly>