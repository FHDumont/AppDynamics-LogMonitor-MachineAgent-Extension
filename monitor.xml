<monitor>
        <name>LogFileMonitor</name>
        <type>managed</type>
        <description>AppDynamics Log Monitor Automation Extension</description>
        <monitor-configuration></monitor-configuration>
        <monitor-run-task>
		<task-arguments>
            		<argument name="config-file" is-required="true" default-value="./default-config.yml" />
        	</task-arguments>
                <execution-style>periodic</execution-style>
                <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
                <name>Automatic Log File Monitor Run Task</name>
                <display-name>Log File Monitor Task</display-name>
                <description>Log File Monitor Task</description>
                <type>java</type>
                <execution-timeout-in-secs>60</execution-timeout-in-secs>
                <task-arguments></task-arguments>
                <java-task>
                        <classpath>lib</classpath>
			<load-jars-in-classpath-dirs>true</load-jars-in-classpath-dirs>
                        <impl-class>com.cisco.josouthe.ProcessLogMonitor</impl-class>
                </java-task>
        </monitor-run-task>
</monitor>
